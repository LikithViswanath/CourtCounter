<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="185dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <TextView
            android:id="@+id/teamA_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/team_a"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/teamA_score_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/ThreeA_points_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Three_point"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="ThreePointsA"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/TwoA_points_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Two_points"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="TwoPointsA"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/Free_throwA_point_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Free_throw"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="FreeThrow"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="185dp"
        android:layout_height="360dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <TextView
            android:id="@+id/teamB_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team_b"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/teamB_score_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/ThreeB_points_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Three_point"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="ThreePointsB"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/TwoB_points_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Two_points"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="TwoPointsB"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/Free_throwB_point_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Free_throw"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="FreeThrow"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:onClick="reset_game"
        tools:ignore="UsingOnClickInXml" />
</androidx.constraintlayout.widget.ConstraintLayout>